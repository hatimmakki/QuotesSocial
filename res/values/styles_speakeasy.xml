<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Speakeasy" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textColorPrimary">@color/actionbar_text_color</item>
        <item name="android:textColorSecondary">@color/actionbar_text_color</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/status_bar</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@android:color/black</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->
    </style>

</resources>