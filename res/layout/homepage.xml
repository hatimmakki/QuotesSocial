<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".HomePage"
                android:background="@android:color/background_light">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quoteText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:hint="@string/quoteHint"
            android:textColor="@android:color/black"
            android:editable="true"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/submit"
            android:visibility="gone"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/quoteAuthor"
            android:textSize="15sp"
            android:hint="@string/authorHint"
            android:layout_below="@+id/quoteText"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/submit"
            android:visibility="gone"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/submit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/quoteAuthor"
            android:clickable="true"
            android:visibility="gone"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/list"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:paddingTop="10dp"
            android:layout_below="@+id/yourQuotes"
            android:layout_alignParentLeft="true"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yourquotes"
            android:id="@+id/yourQuotes"
            android:layout_below="@+id/submit"
            android:layout_alignParentLeft="true"/>
</RelativeLayout>